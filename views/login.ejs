<%- include('partials/header'); -%>

<!-- Main-Section -->
<div class="container-xl">
  <!-- Navbar-Section -->
  <nav class="navbar navbar-expand navbar-light mt-5">
    <div class="container-fluid">
      <a class="navbar-brand" href="/#">
        <img src="/images/logo.svg" alt="Notebook-logo" class="logo" />
        <strong>NOTEBOOK</strong>
      </a>
      <div class="ml-auto">
        <ul class="navbar-nav">
          <li class="nav-item get-started">
            <a class="nav-link active px-3" aria-current="page" href="/signup"
              >Signup Now</a
            >
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="text-center py-5">
    <div class="row">
      <div class="col">
        <h2>Admin/Teacher Demo Login</h2>
        <form action="/demologin" method="post" class="mt-4 px-5">
          <input
            type="text"
            class="form-control"
            name="username"
            placeholder="Enter username"
          /><br />
          <input
            type="password"
            class="form-control"
            name="password"
            placeholder="Enter password"
          />
          <input
            type="submit"
            class="btn btn-outline-dark mt-3 py-2 px-4"
            value="Login"
          />
        </form>
      </div>
      <div class="col">
        <h2>Student Login</h2>
        <div class="mt-4">
          <a
            class="btn btn-outline-dark mt-3 py-2 px-4"
            href="/auth/google"
            role="button"
            style="text-transform: none"
          >
            <img
              width="20px"
              class="mb-1 mx-1"
              alt="Google sign-in"
              src="images/google-icon.svg"
            />
            <span class="h5">Login with Google</span>
          </a>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/subfooter'); -%> <%- include('partials/footer'); -%>
</div>
